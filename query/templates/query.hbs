<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact Us - Funded</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      justify-content:
        center;
      align-items: center;
      background: linear-gradient(135deg, #003366,
          #0066cc, #99ccff);
    }

    .container {
      max-width: 1000px;
      padding: 30px;
      background-color: #fff;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      position: relative;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: flex-start;
    }

    .circle {
      width: 150px;
      height: 150px;
      background-color: #003366;
      border-radius:
        50%;
      position: absolute;
      top: -75px;
      left: -75px;
    }

    .triangle {
      width: 0;
      height: 0;
      border-top: 100px solid transparent;
      border-right: 100px solid #0066cc;
      border-bottom: 100px solid transparent;
      position: absolute;
      bottom: -100px;
      right: -100px;
    }

    .content {
      flex: 1;
      padding-right: 30px;
    }

    .image {
      flex: 0 0 300px;
      margin-left: 30px;
    }

    .image img {
      max-width:
        100%;
      height: auto;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0,
          0.2);
    }

    h1 {
      color: #003366;
      font-size: 42px;
      font-weight: 700;
      text-align: center;
      margin-bottom: 20px;
      position: relative;
      z-index: 1;
    }

    h1::after {
      content: "";
      display: block;
      width: 100%;
      height: 20px;
      background-color: rgba(0, 51, 102, 0.3);
      position: absolute;
      bottom: 0;
      left: 0;
      z-index: -1;
    }

    h2 {
      color: #0066cc;
      font-size: 32px;
      font-weight:
        600;
      margin-top: 30px;
      margin-bottom: 15px;
    }

    p {
      line-height: 1.5;
      margin-bottom: 20px;
      font-size: 18px;
      text-align: justify;
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    li {
      margin-bottom: 10px;
      position: relative;
      padding-left: 25px;
      font-size: 16px;
    }

    li:before {
      content: "\2022";
      color: #003366;
      font-weight: bold;
      display:
        inline-block;
      width: 1em;
      margin-left: -1em;
      position: absolute;
    }

    .contact-form {
      max-width: 600px;
      margin: 0 auto;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
      color: #003366;
    }

    input,
    textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size:
        16px;
    }

    button[type="submit"] {
      background-color: #0066cc;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color:
        #003366;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Query Form</h1>
    <div class="contact-form">
      <form action="/query" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="message">Query</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</body>

</html>